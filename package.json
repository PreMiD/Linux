{
	"name": "premid",
	"productName": "PreMiD",
	"author": "Florian 'Timeraa' Metz <me@timeraa.dev> (https://github.com/Timeraa)",
	"description": "Discord Rich Presence for web services for Linux!",
	"version": "2.3.3",
	"repository": {
		"type": "git",
		"url": "git://github.com/PreMiD/Linux.git"
	},
	"bugs": {
		"url": "https://github.com/PreMiD/Linux/issues"
	},
	"homepage": "https://premid.app",
	"license": "MPL-2.0",
	"scripts": {
		"init": "tsc && npx copyfiles -u 1 src/assets/** dist/app/ && npx copyfiles -f package.json dist/app/",
		"start": "electron dist/app/. --unhandled-rejections=strict",
		"dev": "npx nodemon",
		"dist": "yarn run init && cd dist/app/ && yarn install",
		"build": "electron-builder --project ./dist/app/ -p never",
		"build:appimage": "electron-builder --project ./dist/app/ build -l AppImage --x64 -p onTagOrDraft",
		"build:n-appimage": "electron-builder --project ./dist/app/ build -l AppImage --x64 -p never"
	},
	"build": {
		"appId": "com.PreMiD.app",
		"copyright": "PreMiD",
		"linux": {
			"maintainer": "PreMiD contributors (https://github.com/PreMiD)",
			"category": "Utility",
			"artifactName": "${productName}.${ext}",
			"icon": "assets/appIcon.icns",
			"target": [
				"tar.gz",
				"deb",
				"rpm"
			],
			"extraFiles": [
				"assets/premid.desktop",
				"assets/appIcon.png"
			]
		},
		"publish": [
			{
				"provider": "github",
				"owner": "PreMiD",
				"repo": "Linux",
				"vPrefixedTagName": true,
				"releaseType": "release"
			}
		]
	},
	"devDependencies": {
		"@types/auto-launch": "5.0.1",
		"@types/node": "14.14.37",
		"@types/socket.io": "2.1.13",
		"copyfiles": "^2.4.1",
		"electron": "11.3.0",
		"electron-builder": "23.0.3",
		"nodemon": "^2.0.19",
		"typescript": "4.8.2"
	},
	"dependencies": {
		"@xhayper/discord-rpc": "^1.0.4",
		"auto-launch": "5.0.5",
		"electron-store": "6.0.1",
		"electron-updater": "5.0.1",
		"socket.io": "3.1.1",
		"source-map-support": "0.5.16"
	}
}
